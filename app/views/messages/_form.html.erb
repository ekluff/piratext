<%= form_for @message, html: {class: "form", remote: true} do |f| %>

  <% if @message.errors.any? %>
    <p>
      There be a problem, matey!
    </p>
    <% @message.errors.full_messages.each do |m| %>
      <ul>
        <li>
          <%= m %>
        </li>
      </ul>
    <% end %>
  <% end %>

  <div class="form-group col-md-6">
    <%= f.text_field :to, placeholder: "to", class: "form-control", required: true %>
  </div>
  <div class="form-group col-md-6">
    <%= f.text_field :from, placeholder: "from", class: "form-control", required: true %>
  </div>

  <div class="form-group col-md-12">
    <%= f.text_area :body, placeholder: "body", class: "form-control", required: true %>
  </div>

  <div class="col-md-12 text-center">
    <%= f.submit "yarr!", class: "btn btn-primary" %>
  </div>

<% end %>
